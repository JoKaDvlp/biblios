{% extends 'base.html.twig' %}

{% block title %}Biblios - nom du livre{% endblock %}

{% block body %}
    <!-- Product section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="row gx-4 gx-lg-5 align-items-center">
                <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="{{ book.cover }}" alt="Couverture du livre {{ book.title }}" /></div>
                <div class="col-md-6">
                    <div class="small mb-1">ISBN : {{ book.isbn }}</div>
                    <h1 class="display-5 fw-bolder">{{ book.title }}</h1>
                    <div class="fs-5">
                        <span>Auteur(s): {{ book.authors|map(a => a.name)|join(', ') }}</span>
                    </div>
                    <div class="fs-5">
                        <span>Editeur: {{ book.editor.name }}</span>
                    </div>
                    <div class="fs-5">
                        <span>{{ book.pageNumber }} pages - {{ book.editedAt|format_datetime('medium', 'none', locale: 'fr') }}</span>
                    </div>
                    <div class="fs-5">
                        <span>Statut: {{ book.status.getLabel() }}</span>
                    </div>
                    <p class="lead mt-5">{{ book.plot }}</p>
                    <div class="d-flex">
                        <a href="{{ path('app_public_book_index') }}" class="btn btn-outline-dark flex-shrink-0">
                            <i class="bi-cart-fill me-1"></i>
                            Retour Ã  la liste
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
